# Application
NODE_ENV=test
PORT=3001
API_PREFIX=api
APP_NAME=Smart Home Backend Test
APP_DESCRIPTION=Smart Home Backend API Test
APP_VERSION=0.1.0

# Database
DB_TYPE=better-sqlite3
DB_DATABASE=smart_home_test.db
DB_SYNCHRONIZE=true
DB_LOGGING=false

# JWT
JWT_SECRET=test-32-character-secret-key-here-now
JWT_EXPIRES_IN=1d
JWT_REFRESH_SECRET=test-32-character-refresh-key-here-now
JWT_REFRESH_EXPIRES_IN=7d

# Swagger
SWAGGER_TITLE=Smart Home API Test
SWAGGER_DESCRIPTION=Smart Home Backend API Test Documentation
SWAGGER_VERSION=0.1.0
SWAGGER_PATH=docs

# Security
CORS_ORIGIN=http://localhost:3001
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100

# Logging
LOG_LEVEL=debug
LOG_FORMAT=dev
