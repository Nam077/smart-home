# Application
NODE_ENV=development
PORT=3000
API_PREFIX=api
APP_NAME=Smart Home Backend
APP_DESCRIPTION=Smart Home Backend API
APP_VERSION=0.1.0

# Database
DB_TYPE=better-sqlite3
DB_DATABASE=smart_home.db
DB_SYNCHRONIZE=true
DB_LOGGING=true

# JWT
JWT_SECRET=your-32-character-secret-key-here-now
JWT_EXPIRES_IN=1d
JWT_REFRESH_SECRET=your-32-character-refresh-key-here-now
JWT_REFRESH_EXPIRES_IN=7d

# Swagger
SWAGGER_TITLE=Smart Home API
SWAGGER_DESCRIPTION=Smart Home Backend API Documentation
SWAGGER_VERSION=0.1.0
SWAGGER_PATH=docs

# Security
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100

# Logging
LOG_LEVEL=debug
LOG_FORMAT=dev

# MQTT Configuration
MQTT_HOST=localhost
MQTT_PORT=1883
MQTT_WS_PORT=8883
MQTT_USERNAME=smarthome
MQTT_PASSWORD=smarthome123

#API KEY
GEMINI_API_KEY=your-gemini-api-key